

.mail-wrap {
	width: 650px;
	color: #6B7485;
	border-radius: 3px;
	margin: 130px auto 100px;
	background-color: #fff;
}
.con-item-title {
	height: 70px;
	font-size: 20px;
	line-height: 70px;
	padding-left: 40px;
	border-bottom: 1px solid #eceef1;
}
.con-item-content {
	padding: 70px 0 100px;
	text-align: center;
}
.con-item-div {
	line-height: 40px;
	margin: 10px 0;
	padding: 5px 0;
}
.con-item-div input {
	width: 250px;
	height: 42px;
	color: #3B3B3B;
	text-indent: 12px;
	border: 1px solid #F3F1F1;
	margin-right: 0;
	background-color: #eceef1;
	border-radius: 5px 0 0 5px;
}
.item-btn {
	width: 90px;
	height: 43px;
	color: #fff;
	font-size: 16px;
	text-align: center;
	border: none;
	border-radius: 0 5px 5px 0;
	margin-left: -5px;
	vertical-align: 0;
	background-color: #70a7df;
	display: inline-block;
	cursor: pointer;
}
.item-btn:hover {
	background-color: #4182c6;
}