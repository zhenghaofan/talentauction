
.viewport {
	padding-top: 146px;
	background-color: #ECEEF1;
}

.mail-wrap {
	width: 650px;
	color: #6B7485;
	border-radius: 3px;
	margin: 0 auto 180px;
	background-color: #fff;
}

.mail-wrap .err-wrap {
	min-height: 25px;
}
.mail-wrap .err-wrap label {
	width: 260px;
	height: 25px;
	color: #FF1414;
	line-height: 25px;
	text-indent: 20px;
	padding-left: 18px;
	display: none;
}
.mail-wrap .err-wrap .ico-invalid {
	background: url(../img/icon-error.png) 0 45% no-repeat;	
}

.con-item-title {
	height: 70px;
	font-size: 20px;
	line-height: 70px;
	padding-left: 40px;
	border-bottom: 1px solid #eceef1;
}
.con-item-content {
	padding: 70px 0 100px;
}
.con-item-div {
	width: 342px;
	line-height: 40px;
	padding: 5px 0;
	margin: 10px auto;
}
.con-item-div input {
	width: 250px;
	height: 40px;
	color: #3B3B3B;
	text-indent: 12px;
	vertical-align: top;
	border: 1px solid #F3F1F1;
	background-color: #eceef1;
	border-radius: 3px 0 0 3px;
}
.item-btn {
	width: 90px;
	height: 42px;
	color: #fff;
	font-size: 16px;
	text-align: center;
	border: none;
	border-radius: 0 3px 3px 0;
	margin-left: -5px;
	vertical-align: top;
	background-color: #70a7df;
	display: inline-block;
	cursor: pointer;
}
.item-btn:hover {
	background-color: #4182c6;
}

/****** 页尾******/
#footer {
	position: relative;
}