

.mail-wrap {
	width: 700px;
	color: #6B7485;
	border-radius: 3px;
	margin: 130px auto 100px;
	background-color: #fff;
}
.mail-wrap .fc-1 {
	color: #3578bc;
}
.mail-wrap .fc-2 {
	color: #8f8f8f;
}
.mail-wrap .title {
	height: 75px;
	font-size: 20px;
	line-height: 75px;
	padding-left: 45px;
	border-bottom: 1px solid #eceef1;
}
.mail-wrap .mail-body {
	padding: 0 45px;
}
.mail-wrap .text1 {
	font-size: 24px;
	margin: 40px 0 20px 0;
}
.mail-wrap .text2, .text3 {
	font-size: 16px;
	line-height: 30px;
}
.mail-wrap .text3 {
	margin-bottom: 50px;
}
.mail-item span {
	font-size: 18px;
	margin-bottom: 12px;
	display: block;
}
.mail-item ol li {
	font-size: 14px;
	margin-bottom: 5px;
}
.mail-footer {
	padding: 20px 0 30px 45px;
}