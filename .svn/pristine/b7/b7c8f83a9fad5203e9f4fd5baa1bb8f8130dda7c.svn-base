



/****** 调整样式 ******/
* {
	margin: 0;
	padding: 0;
	font-size: 100%;
	vertical-align: baseline;
}
body {
	font-size: 14px;
	font-family: Verdana,"Lantinghei SC","Hiragino Sans GB","Microsoft Yahei",Helvetica,arial,\5b8b\4f53,sans-serif;
	background-color: #ECEEF1;
}
ol, ul {
	margin: 0;
	padding: 0;
	list-style: none;
}
pre {
	margin: 0;
	padding: 0;
}
a {
	text-decoration: none;
}
i {
	font-style: normal;	
}
em {
	font-style: normal;
}
.hidden {
	display: none !important;
}
.clear {
	clear: both;
}
.box-shadow {
	-moz-box-shadow: 2px 2px 2px rgba(199,198,198,1);
	-webkit-box-shadow: 2px 2px 2px rgba(199,198,198,1);
	box-shadow: 1px 1px 2px rgba(199,198,198,1);
}




















* {
	margin: 0;
	padding: 0;
	font-size: 100%;
	vertical-align: baseline;
}

html {
	height: 100%;
}

body {
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 14px;
	color: #333;
	background-color: #fff;
	overflow-y: scroll;
	height: 100%;
}

.content {
	min-height: 100%;
	height: auto !important;
	height: 100%;
	position: relative;
}



.sidebar-l {
	width: 250px;
	min-height: 100%;
	height: auto !important;
	height: 100%;
	position: absolute;
	background-color: #2d4e7b;
	top: 0;
	left: 0;
}

.side-l-title {
	height: 40px;
	line-height: 40px;
	color: #fff;
	background-color: #2d4e7b;
	padding-left: 20px;
	border-bottom: 1px solid #14294d;
	font-size: 16px;
}

.side-l-con {
	padding-top: 30px;
	color: #fff;
	border-top: 1px solid #4970a6;
}

.side-l-name {
	font-size: 18px;
	margin-bottom: 30px;
	padding-left: 20px;
}

.side-l-item {
	font-size: 16px;
	height: 45px;
	line-height: 45px;
	border-bottom: 1px solid #14294d;
	border-top: 1px solid #4970a6;
}

.side-l-item a {
	color: #fff;
	display: block;
	padding-left: 20px;
}

.b-t0 {
	border-top: 0;
}

.b-b0 {
	border-bottom: 0;
}

.m-r10 {
	margin-right: 10px;
}

.m-b10 {
	margin-bottom: 10px;
}



.alert-dialog {
	position: fixed;
	z-index: 999;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background-color: rgba(0, 0, 0, 0.33);
}

.alert-content {
	display: inline-block;
	padding: 10px 15px;
	color: #fff;
	background-color: #000;
	position: relative;
	top: 0;
	left: 0px;
	border-radius: 5px;
	z-index: 1000;
	line-height: 24px;
}

.loading-box {
	position: absolute;
	z-index: 999;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	background-color: rgba(0, 0, 0, 0.33);
}

.loading-con {
	display: inline-block;
	position: relative;
	top: 0;
	left: 0px;
	z-index: 1000;
	line-height: 24px;
	text-align: center;
	color: #fff;
}
