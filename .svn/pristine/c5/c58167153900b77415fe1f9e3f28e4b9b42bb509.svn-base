			}
			
            $q.when($http.post('/cvmake/addDetails', $.param(config)))
            .then(function(result) {
            	var data = result.data;
            	if(data.code == 200) {
            		$scope.getResume();
            		$scope.editSum(0);
            	}else {
            		$('#url_name_tip').show().text(data.message);
            	}
            }, function(err) {
