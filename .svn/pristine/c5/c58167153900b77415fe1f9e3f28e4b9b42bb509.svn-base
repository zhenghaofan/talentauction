		/* 编辑个人总结*/
		$scope.editSum = function(status) {
			$scope.sumStatus = status;
			if(status == 0) {
				$scope.sumInfo = {};
			}else if(status == 2) {
				$scope.sumInfo.text = $scope.userInfo.resume.details;
			}
		};			
		
		/* 保存个人总结*/
		$scope.saveSum = function() {
			var config = {
