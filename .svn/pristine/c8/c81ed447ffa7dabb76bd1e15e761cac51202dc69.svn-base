<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Swiper demo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="../css/dist/swiper.min.css">

    <!-- Demo styles -->
    <style>
    html, body {
        position: relative;
        height: 100%;
    }
    body {
        background: #eee;
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 14px;
        color:#000;
        margin: 0;
        padding: 0;
    }
    .swiper-container {
        width: 100%;
        height: 100%;
    }
    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;

        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }

    @keyframes rolling
    {
    from {right: 20px; opacity: 0}
    to {right: 10px; opacity: 1;}
    }

    @-moz-keyframes rolling /* Firefox */
    {
    from {right: 20px; opacity: 0}
    to {right: 10px; opacity: 1;}
    }

    @-webkit-keyframes rolling /* Safari å’Œ Chrome */
    {
    from {right: 20px; opacity: 0}
    to {right: 10px; opacity: 1;}
    }

    @-o-keyframes rolling /* Opera */
    {
    from {right: 20px; opacity: 0}
    to {right: 10px; opacity: 1;}
    }

    .slide1{
        background: url(../img/slidefont1.png);
    }
    .slide2{
        background: url(../img/slidefont2.png);
    }
    .slide3{
        background: url(../img/slidefont3.png);
    }
    .slide4{
        background: url(../img/slidefont4.png);
    }
    .slide5{
        background: url(../img/slidefont5.png);
    }
    .slide6{
        background: url(../img/slidefont6.png);
    }
    .slide7{
        background: url(../img/slidefont7.png);
    }
    .swiper-slide{
        background-repeat: no-repeat;
        background-position: center;
        background-size: 100%;
        background-position-y: 20%;
    }
    .swiper-pagination-bullet-active{
    	background: white;
    }
    </style>
</head>
<body>
    <!-- Swiper -->
    <div class="swiper-container" style="background:url(../img/slideBackground.jpg);background-repeat:no-repeat;background-position:center;background-size:cover;">
        <div class="swiper-wrapper" >
            <div class="swiper-slide slide1"></div>
            <div class="swiper-slide slide2"></div>
            <div class="swiper-slide slide3"></div>
            <div class="swiper-slide slide4"></div>
            <div class="swiper-slide slide5"></div>
            <div class="swiper-slide slide6"></div>
            <div class="swiper-slide slide7"></div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination" ></div>
    </div>

    <!-- Swiper JS -->
    <script src="../js/common/swiper.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        paginationClickable: true,
        nextButton: ".swiper-button-next",
        spaceBetween: 30
    });
    </script>
</body>
</html>