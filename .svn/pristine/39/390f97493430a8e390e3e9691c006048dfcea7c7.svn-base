
.viewport {
	padding-top: 100px;
	background-color: #ECEEF1;
}

.bid-wrap {
	width: 1024px;
	min-height: 450px;
	color: #6B7485;
	margin: 0 auto 80px;
}
.fc-1 {
	color: #71a8e0;
}
.fc-2 {
	color: #747b7f;
}

/****** 左侧栏******/
.sidebar {
	float: left;
	width: 229px;
}
.qrcode-box {
	padding: 20px 15px;
	background-color: #fff;
	border-radius: 3px;
}
.qrcode-img img {
	width: 200px;
}
.qrcode-title {
	color: #4182c5;
	font-size: 18px;
	text-align: center;
	margin-bottom: 15px;
}
.qrcode-con {
	font-size: 14px;
	line-height: 24px;
	margin-top: 5px;
}
.hr-box {
	line-height: 30px;
	padding: 20px;
	border-radius: 3px;
	border-top: 4px solid #4182C6;
	margin-top: 20px;
	background-color: #fff;
}
hr-text {
	font-size: 18px;
}


/****** 左侧栏******/
.leftbar {
	width: 750px;
	margin-left: 40px;
	display: inline-block;
}
.list-nav {
	height: 65px;
	font-size: 16px;
	line-height: 65px;
	padding-left: 35px;
	border-radius: 3px;
	margin-bottom: 20px;
	background-color: #fff;
}
.list-nav .nav-tab {
	margin-right: 30px;
	display: inline-block;
	cursor: pointer;
}
.list-nav .nav-tab:hover {
	color: #4182c5;
}
.list-nav .nav-tab.slt {
	color: #4182c5;
}
.list-nav .line {
	border-right: 1px solid #ddd;
	margin-right: 30px;
}


/****** 数据内容******/
.con-item {
	margin-bottom: 20px;
}
.m-t10 {
	margin-top: 10px;
}
.item-main {
	min-height: 85px;
	padding: 20px;
	border-radius: 3px 3px 0 0;
	border-left: 3px solid #93d2fe;
	background-color: #fff;
}
.item-title {
	margin-bottom: 20px;
}
.item-name {
	font-size: 18px;
	margin-right: 5px;
	display: inline-block;
}
.item-name a {
	color: #558dca;
}
.item-city {
	color: #737b7e;
	font-size: 16px;
	display: inline-block;
}
.item-money {
	font-size: 16px;
	color: #38b5e2;
	display: inline-block;
}
.item-time {
	float: right;
	color: #949899;
}
/****** 拒绝理由******/
.detial-text {
	float: left;
	width: 450px;
	font-size: 15px;
	line-height: 20px;
}
.detial-opt {
	float: right;
	margin-top: -14px;
}
.detial-opt a {
	color: #4182C6;
}
.ico-pull {
	color: #71a8e0;
	padding-right: 18px;
	background: url(../img/com_log_2.png) no-repeat;
	background-position: 100% 50%;
	display: inline-block;
	cursor: pointer;
}


/****** 拒绝理由******/
.reject-box {
	height: 45px;
	color: #fff;
	line-height: 40px;
	text-align: left;
	padding-left: 35px;
	border-radius: 0 0 3px 3px;
	margin-top: -2px;
	margin-right: -1px;
	background-color: #7F8EA4;
}
.reject-box-option {
	width: 450px;
	float: left;
}

/****** 暂无数据******/
.list-box  .list-con-filling {
	height: 150px;
	color: #616268;
	text-align: center;
	padding-top: 100px;
	border-radius: 0;
	background-color: #fff;
}
/****** 翻页******/
.list-pager {
	height: 38px;
	text-align: center;
	padding-top: 10px;
	border-radius: 0;
	background-color: #fff;
}


/****** 页尾******/
#footer {
	position: relative;
}
